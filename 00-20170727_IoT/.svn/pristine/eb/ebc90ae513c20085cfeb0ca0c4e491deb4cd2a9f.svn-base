<script type="text/javascript">
	$(function() {
		//alert($(window).height());
		$('#addnode').click(function() {
			$('#div1').show();
		});

	});

	function submitForm(frm) {
		frm.submit();
	}

	function canceladd() {
		alert("取消成功");
	}
	
	//文本框失去焦点后
	$(function() {
		var ok1 = false;
		var ok2 = false, ok3 = false;
		$("form :input.required").each(function() {
			var $required = $("<strong class='high'>*</strong>"); //创建元素
			//$(this).parent().append($required);  //追加到文档中 
			$(this).parent().prepend($required);
		});
		//文本框失去焦点后
		$("form :input")
				.blur(
						function() {
							
							var $parent = $(this).parent();
							if ($(this).is('#entityID')) {
								//验证节点编号
								if (this.value == "") {
									var errorMsg = '不能为空';
									$parent
											.append('<td><span class="formtips onError" style="color:red;font-size:10px">'
													+ errorMsg + '</span></td>');
								} else if (!$("#entityID").val().match(
										/^[A-Za-z0-9]+$/)) {
									var errorMsg = '只能输入数字或者字母';
									$parent
											.append('<td><span class="formtips onError" style="color:red;font-size:10px">'
													+ errorMsg + '</span></td>');
								} else {
									ok1 = true;
								}
							}
							
						});
		
		
		$("form :input").focus(function() {
			var $parent = $(this).parent();
			$parent.find(".formtips").remove();
		});
		//最终提交验证
		$("#send").click(function() {
			$("form :input").trigger("blur");
			var $parent = $(this).parent().parent();
			$parent.find(".formtips").remove();	
			if (ok1) {
				alert("增加成功");
			} else {
				return false;
			}

		});
	});
	//重置
	function subform() {
		$("input").val('');
		$("textarea").val('');
		$("select").val("000");
	}
</script>

